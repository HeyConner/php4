<html>
<head>
    <title>Brand</title>
</head>
<body>

    <h1>{{ brand.getName }}</h1>

    <form action="/brands/{{ brand.getId }}" method="post">
          <input type="hidden" id="store_id" name="store_id" value="{{ store.getId }}">
          <label for="store_id">Select a Store:</label>
          <select name="store_id">
            {% for store in allStores %}
              <option value="{{ store.getId }}">{{ store.getName }}</option>
            {% endfor %}
          </select>
          <button type="submit">Add Stores</button>
    </form>

    {% if stores is not empty %}
        <p>Here are the stores:</p>
        <ul>
            {% for store in stores %}
                <li>{{ store.getName }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a Brand</h4>


    <form action="/delete_brand/{{ brand.getId }}" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit">Delete Brand</button>
    </form>
    
    <p><a href='/'>Home</a></p>
</body>
</html>
