<!DOCTYPE html>
<html>
  <head>
    <title>Brands</title>
  </head>
  <body>
      <h3>{{store.getName}}</h3>

      <form action="/updateStore/{{ store.getId }}" method="get">
        <button type="submit" name="update">Update Store Name</button>
      </form>

      <form action="/stores/{{ store.getId }}" method="post">
              <input type="hidden" id="store_id" name="store_id" value="{{ store.getId }}">
              <label for="brand_id">Select a Brand:</label>
              <select name="brand_id">
                  {% for brand in allBrands %}
                      <option value="{{ brand.getId }}">{{ brand.getName }}</option>
                  {% endfor %}
              </select>
              <button type="submit">Add Brands</button>
          </form>
     {% if brands is not empty %}
        <p>Here are all brands:</p>
        <ul>
            {% for brand in brands %}
                <li><a href="/brands/{{ brand.getId }}">{{ brand.getName }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No brands yet!</p>
    {% endif %}
    <form action="/delete_store/{{ store.getId }}" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit">Delete Store</button>
    </form>

    <p><a href='/'>Home</a></p>
  </body>
</html>
