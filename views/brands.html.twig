<!DOCTYPE html>
<html>
  <head>
    <title>Brands</title>
  </head>
  <body>
      <h3>{{store.getName}}</h3>
    <form action='/stores/{{store.getId}}' method='post'>
      <div>
        <label for='brand_name'>Brand Name:</label>
        <input id='brand_name' name='brand_name' type='text'>
      </div>
     <button type="submit">Add Brand</button>
    </form>
     {% if brands is not empty %}
        <p>Here are all brands:</p>
        <ul>
            {% for brand in brands %}
                <li><a href="/brands/{{ brand.getId }}">{{ brand.getName }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No brands yet!</p>
    {% endif %}
    <form action="/delete_brands" method="post">
      <button type="submit">Clear Brands</button>
    </form>

    <p><a href='/'>Home</a></p>
  </body>
</html>
